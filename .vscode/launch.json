{
  "configurations": [
    {
      "name": "All Tests (Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Tests/prette-tests",
      "args": [
        "--resources",
        "${workspaceFolder}/resources",
        "--logtostdout",
        "--colorlogtostdout"
      ],
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "UV_THREADPOOL_SIZE",
          "value": "0"
        }
      ],
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Load .lldbinit",
          "text": "command source ~/.lldbinit"
        }
      ]
    },
    {
      "name": "Benchmarks (Debug)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Benchmarks/prette-benchmarks",
      "args": [
        "--logtostdout",
        "--colorlogtostdout"
      ],
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "UV_THREADPOOL_SIZE",
          "value": "0"
        }
      ],
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Load .lldbinit",
          "text": "command source ~/.lldbinit"
        }
      ]
    },
    {
      "name": "prette",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Sources/prette-client",
      "args": [
        "--resources",
        "${workspaceFolder}/resources",
        "--logtostdout",
        "--colorlogtostdout"
      ],
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "UV_THREADPOOL_SIZE",
          "value": "0"
        }
      ],
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Load .lldbinit",
          "text": "command source ~/.lldbinit"
        }
      ]
    },
    {
      "name": "prette (verbose)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/Sources/prette-client",
      "args": [
        "--resources",
        "${workspaceFolder}/resources",
        "--logtostdout",
        "--colorlogtostdout",
        "--v=10"
      ],
      "cwd": "${workspaceFolder}",
      "environment": [
        {
          "name": "UV_THREADPOOL_SIZE",
          "value": "0"
        }
      ],
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Load .lldbinit",
          "text": "command source ~/.lldbinit"
        }
      ]
    }
  ]
}